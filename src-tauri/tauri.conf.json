{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "softwarehub",
  "version": "0.1.0",
  "identifier": "org.blossomos.softwarehub",
  "build": {
    "beforeDevCommand": "bun run dev:web",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Software Hub",
        "width": 800,
        "height": 650,
        "decorations": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"]
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:cache.db"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
